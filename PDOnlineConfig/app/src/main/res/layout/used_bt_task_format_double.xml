<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/used_task_double_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext"
        android:orientation="horizontal">
        <!--第一行-->
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"

                      android:layout_weight="9"
                      android:orientation="vertical"
        >
            <TextView android:layout_width="match_parent"
                      android:text="1"
                      android:background="@drawable/bg_edittext"
                      android:id="@+id/sortText"
                      android:textSize="@dimen/defaultTextView"
                      android:textColor="@color/black"
                      android:textAlignment="center"
                      android:gravity="center_vertical"
                      android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:layout_weight="1"
        >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/used_task_double_text11"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/defaultTextView"
                        android:text="编     号:"
                        android:paddingRight="3dp"
                        android:gravity="right"
                        android:textColor="@color/black"
                />
                <TextView
                        android:id="@+id/codeOfDevice"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:layout_weight="4"
                        android:textSize="@dimen/defaultTextView"

                        android:text="高新站110侧GIS超声波检测"
                        android:paddingLeft="3dp"
                        android:gravity="left"
                        android:textColor="@color/black"
                />
            </LinearLayout>
            <!--第二行-->
            <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/used_task_double_text21"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="@dimen/defaultTextView"
                        android:text="I P地址:"
                        android:paddingRight="3dp"

                        android:gravity="center_vertical|right"
                        android:textColor="@color/black"
                />
                <TextView
                        android:id="@+id/ipAddress"
                        android:layout_width="0px"
                        android:layout_marginRight="2dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:textSize="@dimen/defaultTextView"
                        android:text="GIS超声波"
                        android:paddingLeft="3dp"
                        android:gravity="center_vertical|left"
                        android:textColor="@color/black"
                />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
