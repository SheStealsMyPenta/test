<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <android.support.v7.widget.CardView android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="30dp"
                                        android:layout_marginLeft="10dp"
                                        android:background="@drawable/text_border"
                                        android:elevation="30dp"
                                        android:layout_marginRight="10dp"
    >
        <android.support.v4.widget.SwipeRefreshLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="500dp"
                android:orientation="vertical"
                android:id="@+id/swipeLayout">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical"
            >


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/used_aa_special_text_21"
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_weight="1.7"
                            android:textSize="16dp"
                            android:gravity="right|center_vertical"
                            android:paddingRight="30px"
                            android:text="检测阈值："
                            android:textColor="@color/black"/>

                    <EditText
                            android:id="@+id/aaSignal"
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_edittext"
                            android:gravity="left|center_vertical"
                            android:inputType="numberSigned|numberDecimal"
                            android:paddingLeft="10dp"
                            android:textSize="16dp"/>

                    <TextView
                            android:id="@+id/used_aa_special_text_22"
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8"
                            android:text="dBuV"
                            android:textSize="16dp"
                            android:gravity="left|center_vertical"
                            android:textColor="@color/black"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="7dp"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/used_aa_special_text_31"
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_weight="1.7"
                            android:textSize="16dp"
                            android:gravity="right|center_vertical"
                            android:paddingRight="30px"
                            android:text="标定Ｋ值："
                            android:textColor="@color/black"/>

                    <EditText
                            android:id="@+id/aaKValue"
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_edittext"
                            android:gravity="left|center_vertical"
                            android:inputType="number|numberSigned"
                            android:paddingLeft="10dp"
                            android:textSize="16dp"/>

                    <TextView
                            android:id="@+id/used_aa_special_text_32"
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8"
                            android:gravity="left|center_vertical"

                            android:textSize="16dp"
                            android:textColor="@color/black"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="7dp"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/used_aa_special_text_FF1"
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_weight="1.7"
                            android:textSize="16dp"

                            android:gravity="right|center_vertical"
                            android:paddingRight="30px"
                            android:text="标定Ｂ值："
                            android:textColor="@color/black"/>

                    <EditText
                            android:id="@+id/aaBValue"
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_edittext"
                            android:gravity="left|center_vertical"
                            android:inputType="number|numberSigned"
                            android:paddingLeft="10dp"
                            android:textSize="16dp"/>

                    <TextView
                            android:id="@+id/used_aa_special_text_FF2"
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8"
                            android:gravity="left|center_vertical"

                            android:textSize="16dp"
                            android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/dischargeLayout"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                    <TextView

                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_weight="1.7"
                            android:textSize="16dp"
                            android:gravity="right|center_vertical"
                            android:paddingRight="30px"
                            android:text="放电阈值："
                            android:textColor="@color/black"/>

                    <EditText
                            android:id="@+id/dischargeValue"
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_edittext"
                            android:gravity="left|center_vertical"
                            android:inputType="numberSigned|numberDecimal"
                            android:paddingLeft="10dp"
                            android:textSize="16dp"/>

                    <TextView
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8"
                            android:text="dBuV"
                            android:textSize="16dp"
                            android:gravity="left|center_vertical"
                            android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/chartLayout"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                    <TextView

                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_weight="1.7"
                            android:textSize="16dp"
                            android:gravity="right|center_vertical"
                            android:paddingRight="30px"
                            android:text="谱图阈值："
                            android:textColor="@color/black"/>

                    <EditText
                            android:id="@+id/chartValue"
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_edittext"
                            android:gravity="left|center_vertical"
                            android:inputType="numberSigned|numberDecimal"
                            android:paddingLeft="10dp"
                            android:textSize="16dp"/>

                    <TextView
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8"
                            android:text="dBuV"
                            android:textSize="16dp"
                            android:gravity="left|center_vertical"
                            android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.SwipeRefreshLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>